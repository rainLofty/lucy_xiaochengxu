/**index.wxss**/
page{background: #ff735a url('http://www.liubai.shop/lucky/icons.png') no-repeat left top;width:100%;background-size:contain;}
.fuli{width:174rpx;height:63rpx;margin-left:100rpx;}
.title1{width:590rpx;height:170rpx;display: block;margin:20rpx auto;}
.title2{width:614rpx;height:101rpx;display: block;margin:0rpx auto;}
.container-out {
  height: 650rpx;
  width: 650rpx;
  background-color: #fedc7a;
  margin: 80rpx auto;
  border-radius: 40rpx;
  box-shadow: 0 10px 0 rgba(0,0,0,0.1);
  position: relative;
}

.container-in {
  width: 580rpx;
  height: 580rpx;
  background-color: #f4a515;
  border-radius: 40rpx;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
}

/**小圆球
box-shadow: inset 3px 3px 3px #fff2af;*/

.circle {
  position: absolute;
  display: block;
  border-radius: 50%;
  height: 20rpx;
  width: 20rpx;
}

.content-out {
  text-align: center;
  position: absolute;
  height: 175rpx;
  width: 175rpx;
  background-color: #fff;
  border-radius: 25rpx;
  box-shadow: 0 -10rpx 0rpx rgba(214,214,214,0.4) inset;
  overflow: hidden;
}

/**居中 加粗*/
.start-btn button{background:none;color:#fff;cursor: pointer;width:100%;height: 100%;padding-top:30rpx;box-sizing: border-box;}
.start-btn button::after{border:none;}
.start-btn button::before{border:none;}
.start-btn {
  position: absolute;
  margin: auto;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  border-radius: 25rpx;
  height: 175rpx;
  width: 175rpx;
  background: linear-gradient(#fe7d7d,#e03b3b);
  box-shadow: 0 -10rpx 0rpx rgba(0,0,0,0.2) inset;
  color: #fff;
  text-align: center;
  font-weight: bolder;
}
.graybg{background:#bbb;}
.start-btn text{
  display: block;
  font-size:45rpx;
  line-height:50rpx;
}

.award-image {
  width:111rpx;
  display: block;
  margin:10rpx auto 4rpx;
}
.award-text{
  color:#98520e;
  font-size:26rpx;
  font-weight: 500;
  display: block;
}
.mask{width:100%;height:100%;background:rgba(0,0,0,0.7) ;position:fixed;top:0;left:0;z-index:100;}

.whitebg{width:70%;padding:50rpx 10rpx 50rpx;background: #fff;position: absolute;top:50%;left:50%;transform: translate(-50%,-50%);z-index:1;border-radius:0 0 20rpx 20rpx;text-align: center;}
.gongxi{width:120%;position: absolute;top:-100rpx;left:50%;transform: translate(-50%,0);}
.mask .prize{max-width:300rpx;padding:40rpx 0;max-height:300rpx;}
.btns{display: flex;justify-content: space-between;}
.btns button{border-radius: 20rpx;padding:0 60rpx;line-height:2.4;}
.btns .agin{background:#ff735a; color:#fff;}
.btns .lingjiang{background:#f4a515;color:#fff}
.shuoming .h3{color:#fff;text-align: center;font-weight: bold;margin-bottom:20rpx;background:url(http://www.liubai.shop/lucky/shuomingbg.png) no-repeat center center;width:90%;margin:0 auto 30rpx;}
